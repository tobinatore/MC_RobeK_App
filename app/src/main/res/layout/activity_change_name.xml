<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.noethlich.tobias.mcrobektrainingsplaner.ChangeNameActivity"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bitte den neuen Namen eingeben:"
        android:id="@+id/textView2"
        android:layout_marginTop="131dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/newNameField"
        android:layout_marginTop="63dp"
        android:textColor="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ändern"
        android:id="@+id/ändern"
        android:layout_marginTop="59dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_border"
        android:layout_below="@+id/newNameField"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
